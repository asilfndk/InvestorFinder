APP_NAME=AI Investor Finder
APP_VERSION=2.0.0
ENVIRONMENT=development
DEBUG=true

# Server
HOST=0.0.0.0
PORT=8000
ALLOWED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# LLM Providers
GEMINI_API_KEY=your_gemini_key
GEMINI_MODEL=gemini-2.0-flash
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4
DEFAULT_LLM_PROVIDER=gemini

# Search (Google Custom Search)
GOOGLE_SEARCH_API_KEY=
GOOGLE_SEARCH_ENGINE_ID=
SEARCH_TIMEOUT_SECONDS=15
SEARCH_MAX_RETRIES=2
SEARCH_CACHE_TTL_MINUTES=20

# Scraping
LINKEDIN_SCRAPE_DELAY=0.2
LINKEDIN_MAX_CONCURRENCY=3

# Memory & Persistence
MEMORY_PERSISTENCE_ENABLED=true
MEMORY_PERSISTENCE_PATH=data/conversations
CONVERSATION_MAX_TTL_HOURS=24
MAX_CONVERSATIONS=500
MAX_MESSAGES_PER_CONVERSATION=100

# Database
DATABASE_URL=sqlite+aiosqlite:///./data/investor_finder.db
DATABASE_ECHO=false

# Logging
LOG_LEVEL=INFO
LOG_JSON=false
